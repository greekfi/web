# Mode selection (set via yarn command, or override with env var)
# MODE=direct              # Set automatically by yarn commands

# === COMMON ===
CHAIN_ID=8453            # Chain to use (1=Ethereum, 8453=Base, 42161=Arbitrum, 130=Unichain, etc.)
MAKER_ADDRESS=0x...
PRIVATE_KEY=0x...        # For signing quotes

# === RPC ENDPOINTS (optional overrides) ===
# RPC_ETHEREUM=https://eth.drpc.org
# RPC_BASE=https://mainnet.base.org
# RPC_ARBITRUM=https://arb1.arbitrum.io/rpc
# RPC_UNICHAIN=https://mainnet.unichain.org
# RPC_SEPOLIA=https://rpc.sepolia.org
# RPC_BASE_SEPOLIA=https://sepolia.base.org
# RPC_UNICHAIN_SEPOLIA=https://sepolia.unichain.org

# === PRICING (direct & bebop modes) ===
DEFAULT_IV=0.8
RISK_FREE_RATE=0.05
BID_SPREAD=0.02
ASK_SPREAD=0.02
SPOT_POLL_INTERVAL=30000

# === DIRECT MODE ===
HTTP_PORT=3010
WS_PORT=3011
PRICE_BROADCAST_INTERVAL=5000

# === BEBOP MODE ===
BEBOP_MARKETMAKER=xxx
BEBOP_AUTHORIZATION=xxx
BEBOP_API_URL=https://api.bebop.xyz

# === RELAY MODE ===
RELAY_WS_PORT=3004
BEBOP_CHAINS=ethereum,base,arbitrum
